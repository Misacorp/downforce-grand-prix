{
  "env": {
    "es2021": true,
    "jest/globals": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["jest", "prettier", "@typescript-eslint"],
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"],
    "lines-between-class-members": "off",
    "no-use-before-define": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  }
}
